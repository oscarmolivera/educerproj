<!-- navbar -->
<nav class="navbar navbar-default">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>        
    </div>
    
      <ul class="nav navbar-nav">
        <li class="icon-li"><%= image_tag 'browser.png', size: 36 %></li>
        <li>
          <%= link_to root_path, class: 'navbar-brand'  do %>
            <%= t(:name_app)%>   
          <%end%>
        </li>  
      </ul>
    
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="<%= active?(root_path) %>"><%= link_to t(:root_menu), root_path %> </li>
        <li><%= link_to t(:about), root_path %></li>
        <li><%= link_to t(:contact), root_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="<%= active?(current_user) %>">
            <%= link_to current_user  do %>
              <%= t(:profile)%> 
              <i class = "far fa-user-circle"></i>
            <%end%>        
          </li>
          <li class="<%= active?(logout_path) %>">
            <%= link_to logout_path  do %>
              <%= t(:logout)%> 
              <i class = "fas fa-sign-out-alt"></i>
            <%end%>        
          </li>
        <% else%>
          <li class="<%= active?(signup_path) %>">
            <%= link_to signup_path  do %>
              <%= t(:signin)%> 
              <i class = "fas fa-user-plus"></i>
            <%end%>        
          </li>
          <li class="<%= active?(login_path) %>">
            <%= link_to login_path  do %>
              <%= t(:login)%> 
              <i class = "fas fa-user"></i>
            <%end%>        
          </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>