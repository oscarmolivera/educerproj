<% provide(:title, "")%>
<div class="container container-blur">
  <div class="row">
    <div class="col-lg-12">
      <div id="page-title">
        <%= render 'shared/flashpop'%>
        <h1><%= t(:forgot_title) %></h1>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3 new-form">
          <%= form_for(:password_reset, url: password_resets_path(params[:id])) do |f| %>
            <%= f.label t(:email) %>
            <%= f.email_field t(:email), class: 'form-control' %>

            <%= f.submit t(:forgot_btn), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>