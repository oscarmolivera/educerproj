<% provide(:title, t(:profile))%>
<div class="container container-blur">
  <div class="row">
    <div class="col-lg-12">
      <div id="page-title">
        <%= render 'shared/flashpop'%>
        <h1><%= t(:profile) %> </h1>
        <h3><%= @user.name %> </h3>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-md-4 img-responsive ">
            <%= image_tag(@user.avatar, class: "center-block img-thumbnail") if @user.avatar.attached?%>
				  </div>
          <div class="col-md-6">
            <%= form_for(@user) do |f| %>
            
              <%= f.label :name, t(:name) %>
              <%= f.text_field :name, class: 'form-control', value: @user.name, disabled: true %>

              <%= f.label :password, t(:password) %>
              <%= f.password_field :password, class: 'form-control', value: @user.password, disabled: true   %>
              
              <div class="field">
                <%= f.label :avatar, t(:avatar) %>
                <%= f.file_field :avatar, disabled: true %>
              </div>
                  <%= f.submit t(:login_btn), id: "btn_save", class:"btn btn-secondary text-center", disabled: true %>
            <% end %>
                <%= button_tag t(:edit_user), id: "btn-edit", class:"btn btn-info text-center", onclick: "editar()"%>
          </div>
        </div>  
      </div>  
    </div>
  </div>
</div>